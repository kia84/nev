                accuracy:     80,
                damage:       90,
                damage_type:  :earth,
                initiative:   30,
                targets:      :nearest,
                target_count: 1
        }, <<-DESC
            Исполинский Горный великан с легкостью поднимает огромные
            каменные глыбы и швыряет их во врагов.
        DESC
        ) %>

    <%= d2_unit_table(
                'Ледяной великан',
                '/Disciples2/Rasi/GNOM/support/3.jpg', {
                level:        3,
                expirience:   1950,
                hp:           400,
                armor:        0,
                immune:       :water,
                resist:       :none,
                weapon_type:  'Осколки льда',
                accuracy:     80,
                damage:       120,
                damage_type:  :water,
                initiative:   30,
                targets:      :nearest,
                target_count: 1
