                'Сын Имира',
                '/Disciples2/Rasi/GNOM/support/5.jpg', {
                level:        4,
                expirience:   3050,
                hp:           500,
                armor:        0,
                immune:       :water,
                resist:       :none,
                weapon_type:  ['Ледяной меч', 'Мороз'],
                accuracy:     [80, 85],
                damage:       [150, 30],
                damage_type:  [:water, :water],
                initiative:   50,
                targets:      :nearest,
                target_count: 1
        }, <<-DESC
