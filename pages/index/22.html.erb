    <%= d2_unit_table(
                'Холмовой великан',
                '/Disciples2/Rasi/GNOM/support/1.jpg', {
                level:        1,
                expirience:   400,
                hp:           210,
                armor:        0,
                immune:       :none,
                resist:       :none,
                weapon_type:  'Удар дубины',
                accuracy:     80,
                damage:       60,
                damage_type:  :earth,
