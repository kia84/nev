<% layout 'pages/index/layouts/d2_race_page.html.erb' do %>
    <h2 class="support"></h2>

    <%= d2_unit_table(
                'Чёрт',
                '/Disciples2/Rasi/Ligion/support/1.jpg', {
                level:        1,
                expirience:   275,
                hp:           170,
                armor:        0,
                immune:       :none,
                resist:       :none,
                weapon_type:  'Удар',
                accuracy:     80,
                damage:       50,
                damage_type:  :weapon,
                initiative:   35,
                targets:      :nearest,
                target_count: 1
        }, <<-DESC
