                hp:           90,
                armor:        0,
                immune:       :death,
                resist:       :none,
                weapon_type:  'Паралич',
                accuracy:     70,
                damage:       0,
                damage_type:  :mind,
                initiative:   20,
                targets:      :all,
                target_count: 1
        }, <<-DESC
            Одного взгляда Призрака достаточно, чтобы кровь застыла в жилах и
            смертельный холод сковал всё тело.
        DESC
        ) %>

    <%= d2_unit_table(
                'Тень',
                '/Disciples2/Rasi/undead/Archer/3.jpg', {
                animation:    '/_ph/37/2/304012444.gif',
                level:        3,
                expirience:   850,
                hp:           135,
                armor:        0,
                immune:       :death,
                resist:       :none,
                weapon_type:  'Паралич',
                accuracy:     50,
                damage:       0,
                damage_type:  :mind,
                initiative:   20,
