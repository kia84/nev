<% @params[:title] = "#{c '$SECTION_NAME$'} - #{c '$MODULE_NAME$'} - #{c '$SITE_NAME$'}" %>

<% layout 'templates_pda/layouts/main.html.erb' do %>
    <ol class="breadcrumb">
        <li><a href="/">Главная</a></li>
        <li><a href="<%= c '$MODULE_URL$' %>">Статьи</a></li>
        <li class="active"><%= c '$SECTION_NAME$' %></li>
    </ol>

    <% uif('$ADD_ENTRY_LINK$') { %>
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-sm-offset-6 col-md-3 col-md-offset-9">
                [ <a href="<%= c '$ADD_ENTRY_LINK$' %>">Добавить статью</a> ]
            </div>
        </div>
    <% }.endif! %>

    <div class="row">
        <% uif('$CATEGORIES$') { %>
            <div class="col-sm-12 col-md-2">
                <%= c '$CATEGORIES$' %>
                <hr class="hidden-md hidden-lg">
            </div>
        <% }.endif! %>
        <div class="col-sm-12 col-md-10">
            <div class="clearfix">
                В разделе материалов: <b><%= c '$NUM_ENTRIES$' %></b>
                <% uif('$NUM_SHOWN$') { %><br/>Показано материалов: <b><%= c '$NUM_SHOWN$' %></b><% }.endif! %>
                <% uif('$PAGE_SELECTOR$') { %>
                    <div class="pull-right">Страницы: <%= c '$PAGE_SELECTOR$' %></div>
                <% }.endif! %>
            </div>
            <%= c '$BODY$' %>
            <%= render :btm_page_selector %>
        </div>
    </div>
<% end %>
