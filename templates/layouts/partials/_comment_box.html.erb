<% ucoz_if('$COM_IS_ACTIVE$') { %>
    <div class="comment_box">
        <div class="title clearfix">
            Всего комментариев: <b>$COM_NUM_ENTRIES$</b>
            <div class="pull-right">$COM_PAGE_SELECTOR$</div>
        </div>
        <div class="body">$COM_BODY$</div>
        <% ucoz_if('$COM_CAN_ADD$') { %>
            <%= c '$COM_ADD_FORM$' %>
        <% }.else { %>
            <% ucoz_ifnot('$USER_LOGGED_IN$') { %>
                <div class="text-center">
                    Добавлять комментарии могут только зарегистрированные пользователи.<br>
                    [ <a href="$REGISTER_LINK$">Регистрация</a> |
                    <a href="$LOGIN_LINK$">Вход</a> ]
                </div>
            <% }.endif! %>
        <% }.endif! %>
    </div>

    <div class="text-center">
        <%= c '$COM_PAGE_SELECTOR1$' %>
    </div>
    <%= vk_comments_box(i("#{@locals[:vk_uid]} + $ID$")) if @locals[:vk_uid].to_i > 0 %>
<% }.endif! %>
