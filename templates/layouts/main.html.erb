<html lang="ru">
    <head>
        <%= charset_and_ie_support_tags %>
        <title><%= @params[:title] || "#{c '$MODULE_NAME$'} - #{c '$SITE_NAME$'}" %></title>
        <%= meta_tags %>
        <%= c '$GLOBAL_AJAXJS$' %>
        <%= stylesheet_link_tag %>
        <%= javascript_include_tag %>
    </head>
    <body class="dark-back">
        <div class="wrapper">
            <%= c '$GLOBAL_HEADER$' %>
            <div class="middle">
                <div class="container">
                    <main class="content bordered<%= ' vk-init' if @params[:vk][:init] %>">
                        <div class="border-exp">
                            <% yield if block_given? %>
                        </div>
                    </main>
                </div>
                <%= c '$GLOBAL_ASIDE$' %>
            </div>
            <%= c '$GLOBAL_FOOTER$' %>
        </div>
    </body>
</html>
