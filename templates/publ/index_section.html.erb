<% @params[:title] = '$SECTION_NAME$ - $MODULE_NAME$ - $SITE_NAME$' %>

<% layout do %>
    <ol class="breadcrumb">
        <li><a href="/">Главная</a></li>
        <li><a href="$MODULE_URL$">Статьи</a></li>
        <li class="active">$SECTION_NAME$</li>
    </ol>

    <?if($ADD_ENTRY_LINK$)?>
        <div class="text-right">[ <a href="$ADD_ENTRY_LINK$">Добавить статью</a> ]</div>
    <?endif?>

    <div class="clearfix hr">
        В разделе материалов: <b>$NUM_ENTRIES$</b>
        <?if($NUM_SHOWN$)?><br/>Показано материалов: <b>$NUM_SHOWN$</b><?endif?>
        <?if($PAGE_SELECTOR$)?>
            <div class="pull-right">Страницы: $PAGE_SELECTOR$</div>
        <?endif?>
    </div>

    $BODY$

    <%= render :btm_page_selector %>
<% end %>
