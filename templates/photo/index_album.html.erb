<% catedory_id = 'substr($URI_ID$,5,2)' %>
<% @params[:title] = '$CAT_NAME$ ' <<  uif_str('$SECTION_NAME$') { |s|
  s << "- #{c '$SECTION_NAME$'}"
}.endif! << " - #{c '$MODULE_NAME$'} - #{c '$SITE_NAME$'}" %>

<% layout do %>
    <ol class="breadcrumb">
        <li><a href="/">Главная</a></li>
        <li><a href="<%= c '$MODULE_URL$' %>">Фотоальбом</a></li>
        <% uif(code_is('substr($URI_ID$,0,5)', "'phCat'"), "#{catedory_id} >= 34", "#{catedory_id} <= 40") { %><li><a href="/photo/45">Disciples II</a></li><% }.endif! %>
        <% uif('$SECTION_NAME$') { %><li><a href="<%= c '$SECTION_URL$' %>"><%= c '$SECTION_NAME$' %></a></li><% }.endif! %>
        <li class="active"><%= c '$CAT_NAME$' %></li>
    </ol>

    <% uif('$ADD_ENTRY_LINK$') { %>
        <div class="text-right">[ <a href="<%= c '$ADD_ENTRY_LINK$' %>">Добавить фотографию</a> ]</div>
    <% }.endif! %>

    <% uif('$CAT_DESCR$') { %>
        <div class="text-center hr"><%= c '$CAT_DESCR$' %></div>
    <% }.endif! %>

    <div class="clearfix hr">
        <% uif('$NUM_ENTRIES$') { %>Фотографий в альбоме: <b><%= c '$NUM_ENTRIES$' %></b><% }.endif! %>
        <% uif('$NUM_SHOWN$') { %><br>Показано материалов: <b><%= c '$NUM_SHOWN$' %></b><% }.endif! %>
        <% uif('$PAGE_SELECTOR$') { %>
            <div class="pull-right">Страницы: <%= c '$PAGE_SELECTOR$' %></div>
        <% }.endif! %>
    </div>

    <% uif('$SORTING_MENU$') { %>
        <div class="clearfix hr">
            <div class="pull-right">Сортировать по: <%= c '$SORTING_MENU$' %></div>
        </div>
    <% }.endif! %>

    <%= c '$BODY$' %>

    <%= render :btm_page_selector %>
<% end %>
